<div class="blog_wrapper">

  <div class="image_wrapper">
    <%= image_tag(blog.pic.url(:medium)) %>
  </div>

  <div class="content_wrapper">
    <p class="blog_title ff_read"> <%= blog.title %>   <span class="blog_date"> <%= blog.created_at.strftime("%-m/%-d/%y") %> </p></p>
    <p class="blog_body"> <%= blog.body %> </p>
    <p class="blog_signature"> <%= blog.guest.firstname.first %><%= blog.guest.lastname.first.downcase %></p> 
  </div>
</div>








