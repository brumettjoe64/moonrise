<div class="guests">

  <h2 class="ff_title fc_2">Guest Information</h2>
  <div class="form">
  <%= form_tag '/guests/modify', method: 'put' do %>
    <% @party.each do |party_member| %>     
      <span class="written"><%= "What's your name?" if party_member == @guest%> </span>
      <div class="field">
        <%= label_tag "First Name:" %>
        <%= text_field_tag 'firstnames[]', party_member.firstname, class: "lineup" %>
      </div>
      <div class="field">
        <%= label_tag "Last Name:" %>
        <%= text_field_tag 'lastnames[]', party_member.lastname, class: "lineup"  %>
      </div>
      <div class="field">
        <%= label_tag "Email:" %>
        <%= text_field_tag 'emails[]', party_member.email, class: "lineup"  %>
      </div>
      </br>
      <span class="written"><%= "Are you bringing anyone?" if party_member.party.count > 1 %> </span>

    <% end %>
    <%= submit_tag("Save Changes", id: "modify_button") %>
  <% end %>

</div>