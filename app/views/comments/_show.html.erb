<div class="<%=comment_authorize(comment) ? "comment my_comment" : "comment"%>" id="<%="comment_number_#{comment.id}"%>"> 
  <p><span class="comment_hdr"><%="#{comment.guest.firstname} #{comment.guest.lastname}"%> <%= fa_icon("comment")%></span>
  <span class="comment_msg"> <%= comment.message %> </span>
  </p>
  <div class="comment_editor">
    <%= link_to(fa_icon("times"), comment, method: :delete, remote: true, data: { confirm: 'Are you sure you want to delete this comment?' }) if comment_authorize(comment) %>
  </div>
</div>