<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Edit</th>
    <th>Del</th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.name %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <td><%= link_to 'X', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% group.guests.order(:firstname).each do |guest| %>
    <tr class="group_member"><td><%=guest.display_name%></td><td></td><td></td></tr>
  <% end %>
<% end %>
</table>

