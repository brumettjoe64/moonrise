<div class="photo_wrapper">
  <div class="image_wrapper" onclick="open_photo_display(this)">
    <%= image_tag(photo.pic.url(:medium), data: { photo: photo.to_json}) %>
  </div>
  <div class="content_wrapper">
    <p class="photo_caption"> <%= photo.caption %> </p>
    <p class="photo_poster"> <%="posted by #{photo.poster.firstname} Â· #{time_ago_in_words(photo.created_at)} ago"%> 
    <%= link_to(fa_icon("remove"), photo, class: "photo_changer", method: :delete, data: { confirm: 'Are you sure you want to delete this picture?' }) if photo_authorize(photo) %>
    <%= link_to(fa_icon("pencil"), "javascript:void(0)", class: "photo_changer",
      onclick: "open_photo_form(#{photo.to_json},#{photo.pic.url(:medium).to_json})") if photo_authorize(photo) %>
    </p>
  </div>
</div>








