<div id="photo_display_wrapper">
  <span class="form_close" id="photo_display_close" onclick = 'close_photo_display()'> <%= fa_icon "remove" %></span>
  <div id="image_display_wrapper">
    <%= image_tag('image-blank.png', id: "photo_display_image") %>
  </div>
  <div id ="content_display_wrapper">
    <p id="photo_display_caption">Caption</p>
    <p id="photo_display_poster">Poster</p>
    <%#= link_to(fa_icon("remove"), photo, class: "photo_changer", method: :delete, data: { confirm: 'Are you sure you want to delete this picture?' }) if photo_authorize(photo) %>
    <%#= link_to(fa_icon("pencil"), "javascript:void(0)", class: "photo_changer",
      onclick: "open_photo_form(#{photo.to_json_for_photo_form},#{photo.pic.url(:medium).to_json})") if photo_authorize(photo) %>
    
  </div>
</div>
