        <a href="http://www.homeaway.com/search/keywords:Narragansett+area%2C+Rhode+Island"> 
          <%= fa_icon "double-angle-right", text: "HomeAway" %> 
        </a> 
      </p>
      <p class="indent"> 
        <a href="http://www.vrbo.com/vacation-rentals/usa/rhode-island/narragansett"> 
          <%= fa_icon "double-angle-right", text: "VRBO" %>
        </a> 
      </p> 
      <p class="indent"> 
        <a href="https://www.airbnb.com/s/Narragansett--RI"> 
          <%= fa_icon "double-angle-right", text: "AirBnB" %>
        </a> 
      </p>
