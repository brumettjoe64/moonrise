<h1>Listing details</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Date</th>
    <th>Time</th>
    <th>Groups</th>
    <th>Guests</th>
    <th></th>
    <th></th>
  </tr>

<% @details.each do |detail| %>
  <tr>
    <td><%= detail.description %></td>
    <td><%= detail.when.strftime("%a %m/%d/%y") %></td>
    <td><%= detail.when.strftime("%l:%M%P") %></td>
    <td><%= detail.groups.map{|x| x.name}.join(", ") %></td>
    <td><%= detail.guests.map{|x| x.display_name}.join(", ") %></td>
    <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
    <td><%= link_to 'X', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

